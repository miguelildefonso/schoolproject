@model SchoolProject.Models.Form.Attendance;
@using SchoolProject.Models.Data;
@using Microsoft.AspNetCore.Http;
@{
  if(@Context.Session.GetString("username") == null)
  {
    Context.Response.Redirect("/School/LoginParent");
  }
}

<link rel="stylesheet" href="~/css/adminadmin.css" />
<div class="container-login100" style="background-image: url('/img/konkuk.jpg');">
<div class="sidenav">
  <img src="~/img/parents.png" class="img-circle" width="80" height="80">
  <h4>Parent Menu</h4><br><br>
  <a href="/School/Parent">Home</a>
  <a href="/School/Parent/ViewGrade">View Grade</a>
  <a href="/School/Parent/ViewAttendance">View Attendance</a>
  <a href="/School/Parent/Profile">View Profile</a>
  <a id="logout" asp-controller="LoginParent" asp-action="parlogout">Logout</a>
</div>

<div class="main">
  <nav class="navbar navbar-expand-lg navbar-light">
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav" style="margin-left: auto;">
        <li class="nav-item">
          @{
            <a class="navbar-brand">@DateTime.Now.ToString("dddd , MMM dd, yyyy")</a>
          }
        </li>
      </ul>
    </div>
  </nav>
  <h4 style="margin-top: 20px; margin-bottom: 30px;">Student Attendance Viewer</h4>
  @using(Html.BeginForm("SubmitForm", "ParentAttendance", FormMethod.Post))
  {
    <form>
      <div class="form-group row">
        <div class="col-xs-3">
          <label for="exampleInputEmail1">Enter Student ID</label>
          @Html.TextBoxFor(m => m.student_id, new{@class="form-control",  @placeholder="Enter Student Id"})
        </div>

        <div class="col-xs-3">
          <label for="exampleInputEmail1">Date</label>
          @Html.TextBoxFor(m => m.date,new {@class="form-control", @Id="SelectedDate", @placeholder="Enter Date"})
            <!-- Bootstrap -->
            <script type="text/javascript" src='https://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.8.3.min.js'></script>
            <script type="text/javascript" src='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.0.3/js/bootstrap.min.js'></script>
            <!-- Bootstrap DatePicker -->
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/css/bootstrap-datepicker.css"type="text/css"/>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/js/bootstrap-datepicker.js"type="text/javascript"></script>
            <!-- Bootstrap DatePicker -->
            <script type="text/javascript">
              $(function () {
                  $('#SelectedDate').datepicker({
                      changeMonth: true,
                      changeYear: true,
                      format: "yyyy-mm-dd",
                      language: "tr"
                  });
              });
            </script>
        </div>
      </div>
      <button type="submit" class="btn btn-primary">View Grade</button>
    </form>
  }
</div>
</div>