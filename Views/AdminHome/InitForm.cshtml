@model SchoolProject.Models.Form.Admin_User;
@using SchoolProject.Models.Data;

<link rel="stylesheet" href="~/css/adminhome.css" />

<div class="sidenav">
  <img src="~/img/engineer.png" class="img-circle" width="80" height="80">
  <h4>Admin Menu</h4><br><br>
  <a href="/School/Admin">Home</a>
  <a href="/School/AddStudent">Add Student</a>
  <a href="/School/AddProfessor">Add Professor</a>
  <a href="/School/AddProgram">Add Program</a>
  <a href="/School/AddSubject">Add Subject</a>
  <a href="/School/AddAdmin">Add Admin</a>
  <a href="/School/Login" id="logout">Logout</a>
</div>

<div class="main">
  <nav class="navbar navbar-expand-lg navbar-light">
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav" style="margin-left: auto;">
        <li class="nav-item">
          @{
            <a class="navbar-brand">@DateTime.Now.ToString("dddd , MMM dd, yyyy")</a>
          }
        </li>
      </ul>
    </div>
  </nav>
  @using(Html.BeginForm("SubmitForm", "AdminHome", FormMethod.Post))
  {
    <div class="tableadmin">
      <h3>Admin Users</h3>
      <table class="table table-sm table-striped">
        <thead>
          <tr>
            <th>Admin ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Type</th>
            <th>Username</th>
          </tr>
        </thead>
        <tbody>
          @{
            @foreach (var item in @ViewBag.admin_user as IEnumerable<Admin_User>)
            {
              <tr>
                <td>@item.admin_id</td>
                <td>@item.firstname</td>
                <td>@item.lastname</td>
                <td>@item.type</td>
                <td>@item.username</td>
              </tr>
            }
          }
        </tbody>
      </table>
    </div>

    <div class="tableprogram">
      <h3>Programs</h3>
      <table class="table table-sm table-striped">
        <thead>
          <tr>
            <th>Program ID</th>
            <th>Program Code</th>
            <th>Program Title</th>
            <th>Major</th>
          </tr>
        </thead>
        <tbody>
          @{
            @foreach (var item in @ViewBag.programs as IEnumerable<Programs>)
            {
              <tr>
                <td>@item.program_id</td>
                <td>@item.program_code</td>
                <td>@item.program_title</td>
                <td>@item.major</td>
              </tr>
            }
          }
        </tbody>
      </table>
    </div>

     <div class="tablesub">
      <h3>Subject</h3>
      <table class="table table-sm table-striped">
        <thead>
          <tr>
            <th>Subject ID</th>
            <th>Subject Code</th>
            <th>Subject Title</th>
            <th>Units</th>
          </tr>
        </thead>
        <tbody>
          @{
            @foreach (var item in @ViewBag.subject as IEnumerable<Subject>)
            {
              <tr>
                <td>@item.subject_id</td>
                <td>@item.subject_code</td>
                <td>@item.subject_title</td>
                <td>@item.units</td>
              </tr>
            }
          }
        </tbody>
      </table>
    </div>

    <div class="tableprof">
      <h3>Professors</h3>
      <table class="table table-sm table-striped">
        <thead>
          <tr>
            <th>Professor ID</th>
            <th>Name</th>
            <th>Contact</th>
            <th>Gender</th>
            <th>Status</th>
            <th>Birthday</th>
            <th>Username</th>
          </tr>
        </thead>
        <tbody>
          @{
            @foreach (var item in @ViewBag.professor as IEnumerable<Professor>)
            {
              <tr>
                <td>@item.professor_id</td>
                <td>@item.professor_name</td>
                <td>@item.professor_no</td>
                <td>@item.gender</td>
                <td>@item.status</td>
                @{
                  var bday = @item.birthdate;
                  var b = bday.ToShortDateString();
                  <td>@b</td>
                }
                <td>@item.username</td>
              </tr>
            }
          }
        </tbody>
      </table>
    </div>

    <div class="tablestud">
      <h3>Students</h3>
      <table class="table table-sm table-striped">
        <thead>
          <tr>
            <th>Student ID</th>
            <th>Last Name</th>
            <th>First Name</th>
            <th>Middle Name</th>
            <th>Birthday</th>
            <th>Program</th>
            <th>Status</th>
            <th>Academic Year</th>
            <th>Semester</th>
            <th>Year Level</th>
            <th>Username</th>
          </tr>
        </thead>
        <tbody>
          @{
            @foreach (var item in @ViewBag.student as IEnumerable<Student>)
            {
              <tr>
                <td>@item.student_id</td>
                <td>@item.lastname</td>
                <td>@item.firstname</td>
                <td>@item.middlename</td>
                @{
                  var bday = @item.birthday;
                  var b = bday.ToShortDateString();
                  <td>@b</td>
                }
                <td>@item.program</td>
                <td>@item.status</td>
                <td>@item.academic_year</td>
                <td>@item.sem</td>
                <td>@item.yearlevel</td>
                <td>@item.username</td>
              </tr>
            }
          }
        </tbody>
      </table>
    </div>
  }
</div>